<UserControl x:Class="S3stat.SecureSetup.Content.ErrorDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:webControls="clr-namespace:System.Web.UI.WebControls;assembly=System.Web"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid Style="{StaticResource ContentRoot}" Margin="16,0,16,16">
		<ScrollViewer>
			<StackPanel MinWidth="200">
				<mui:BBCodeBlock x:Name="bbFriendlyText"   BBCode="" />
				<mui:BBCodeBlock x:Name="bbHelpLink" BBCode="[url=]How to fix this[/url]" Margin="0,10,0,0" Visibility="Collapsed"></mui:BBCodeBlock>
				<TextBox x:Name="txtErrorMessage" Margin="0,10,0,0" MinHeight="50" MaxHeight="200" FontFamily="Consolas"></TextBox>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</UserControl>
