<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style x:Key="Tag" TargetType="TextBlock">
		<Setter Property="FontFamily" Value="Segoe UI" />
		<Setter Property="FontSize" Value="9" />
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="Margin" Value="0,5,4,0" />
		<Setter Property="Padding" Value="3,0,3,1" />
		<Setter Property="Background" Value="#60A917"></Setter>
		<Setter Property="Foreground" Value="White"></Setter>
		<Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
		<Setter Property="HorizontalAlignment" Value="Left" />
	</Style>

	<Style x:Key="TagInfo" TargetType="TextBlock" BasedOn="{StaticResource Tag}">
		<Setter Property="Background" Value="#1ba1e2"></Setter>
	</Style>

	<Style x:Key="TagWarning" TargetType="TextBlock" BasedOn="{StaticResource Tag}">
		<Setter Property="Background" Value="#E3C800"></Setter>
	</Style>

	<Style x:Key="TagGood" TargetType="TextBlock" BasedOn="{StaticResource Tag}">
		<Setter Property="Background" Value="#60A917"></Setter>
	</Style>

	<Style x:Key="TagBad" TargetType="TextBlock" BasedOn="{StaticResource Tag}">
		<Setter Property="Background" Value="#E51400"></Setter>
	</Style>

	<Style x:Key="TagNeutral" TargetType="TextBlock" BasedOn="{StaticResource Tag}">
		<Setter Property="Background" Value="#cccccc"></Setter>
	</Style>

</ResourceDictionary>