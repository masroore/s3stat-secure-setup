<UserControl x:Class="S3stat.SecureSetup.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid Style="{StaticResource ContentRoot}">
		<ScrollViewer>
			<StackPanel MinWidth="200">
				<TextBlock Style="{StaticResource Heading1}">
					<Run Text="S3"/><Run Text="STAT" FontSize="22"/>
					<Run Text="Secure Setup"/>
				</TextBlock>
				<mui:BBCodeBlock BBCode="This tool will walk you through the process of setting up logging for your S3 and Cloudfront endpoints, as well as a the necessary permissions to allow S3stat to download and process those logs." />
				<Button Content="Continue" Height="50" Width="150"  RenderTransformOrigin="0.5,0.504" Click="Button_Click" Margin="0,20" HorizontalAlignment="Left"/>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</UserControl>
